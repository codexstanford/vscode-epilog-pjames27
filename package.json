{
  "name": "epilog",
  "displayName": "Epilog",
  "description": "Language Support for Epilog",
  "version": "0.1.0",
  "publisher": "prestonj-epilog",
  "repository": {
    "type": "git",
    "url": "https://github.com/codexstanford/vscode-epilog-pjames27"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "epilog",
        "aliases": [
          "Epilog",
          "epilog"
        ],
        "extensions": [
          ".epilog"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "epilog-dataset",
        "aliases": [
          "Epilog Dataset",
          "epilog dataset"
        ],
        "extensions": [
          ".hdf"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "epilog-ruleset",
        "aliases": [
          "Epilog Ruleset",
          "epilog ruleset"
        ],
        "extensions": [
          ".hrf"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "epilog-metadata",
        "aliases": [
          "Epilog Metadata",
          "epilog metadata"
        ],
        "extensions": [
          ".metadata"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "epilog-script",
        "aliases": [
          "Epilog Script",
          "epilog script"
        ],
        "extensions": [
          ".epilogscript"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "epilog",
        "scopeName": "source.epilog",
        "path": "./syntaxes/epilog.tmLanguage.json"
      },
      {
        "language": "epilog-dataset",
        "scopeName": "source.epilog-dataset",
        "path": "./syntaxes/epilog-dataset.tmLanguage.json"
      },
      {
        "language": "epilog-ruleset",
        "scopeName": "source.epilog-ruleset",
        "path": "./syntaxes/epilog-ruleset.tmLanguage.json"
      },
      {
        "language": "epilog-metadata",
        "scopeName": "source.epilog-metadata",
        "path": "./syntaxes/epilog-metadata.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Running Scripts",
      "properties": {
        "epilog.runScript.trace": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Print trace of query execution."
        }
      }
    },
    "commands": [
      {
        "command": "epilog.runScript",
        "title": "Epilog: Run Epilog Script"
      },
      {
        "command": "epilog.consolidate",
        "title": "Epilog: Consolidate contents of referenced Epilog files"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -b ./client ./server ./common",
    "watch": "tsc -b -w ./client ./server ./common",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ../common && npm install && cd .."
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "mocha": "^9.2.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "vscode-uri": "^3.0.8"
  }
}
