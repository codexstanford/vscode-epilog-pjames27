{
  "name": "epilog",
  "displayName": "Epilog",
  "description": "Language Support for Epilog",
  "version": "0.0.3",
  "publisher": "prestonj-epilog",
  "repository": {
    "type": "git",
    "url": "https://github.com/codexstanford/vscode-epilog-pjames27"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "epilog",
        "aliases": [
          "Epilog",
          "epilog"
        ],
        "extensions": [
          ".epilog"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "epilog-dataset",
        "aliases": [
          "Epilog Dataset",
          "epilog dataset"
        ],
        "extensions": [
          ".hdf"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "epilog-ruleset",
        "aliases": [
          "Epilog Ruleset",
          "epilog ruleset"
        ],
        "extensions": [
          ".hrf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "epilog",
        "scopeName": "source.epilog",
        "path": "./syntaxes/epilog.tmLanguage.json"
      },
      {
        "language": "epilog-dataset",
        "scopeName": "source.epilog-dataset",
        "path": "./syntaxes/epilog-dataset.tmLanguage.json"
      },
      {
        "language": "epilog-ruleset",
        "scopeName": "source.epilog-ruleset",
        "path": "./syntaxes/epilog-ruleset.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "mocha": "^9.2.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "vscode-uri": "^3.0.8"
  }
}
